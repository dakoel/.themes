[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
poll-interval = 5
low-at = 70
format-discharging-prefix = "%{T4}%{T-}   "
format-discharging-prefix-foreground = ${colors.green}
label-discharging = %percentage%%
format-charging-prefix = "%{T4}%{T-}   "
format-charging-prefix-foreground = ${colors.green}
label-charging = %percentage%%
format-full-prefix = "%{T4}%{T-}   "
format-full-prefix-foreground = ${colors.green}
label-full = %percentage%%

[module/bspwm]
type = internal/bspwm
label-focused = 
label-focused-background = ${colors.grey}
label-focused-underline= ${colors.white}
label-focused-padding = 2
label-occupied = 
label-occupied-padding = 2
label-urgent = 
label-urgent-background = ${colors.red}
label-urgent-padding = 2
label-empty = 
label-empty-foreground = ${colors.grey}
label-empty-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
label-font = 2
format-prefix = "   "
format-prefix-foreground = ${colors.violet}
format-prefix-font = 2
label = %percentage:2%%

[module/date]
type = internal/date
time = %H:%M
date = %d.%m.%Y
interval = 5
label-font = 2
label = %date%, %time%
label-foreground = ${colors.white}

[module/memory]
type = internal/memory
interval = 2
label-font = 2
format-prefix = "   "
format-prefix-foreground = ${colors.yellow}
format-prefix-font = 2
label = %percentage_used%%

[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 1
label-open = 
label-open-foreground = ${colors.red}
label-close = cancel
label-close-foreground = ${colors.white}
label-separator = |
label-separator-foreground = ${colors.grey}

menu-0-0 = reboot
menu-0-0-foreground = ${colors.red}
menu-0-0-exec = systemctl reboot
menu-0-1 = power off
menu-0-1-foreground = ${colors.red}
menu-0-1-exec = systemctl poweroff

[module/pulseaudio]
type = internal/pulseaudio
format-volume-prefix = "墳 "
format-volume-prefix-foreground = ${colors.grey}
format-volume-prefix-font = 5
label-volume-font = 2
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.grey}
format-muted-prefix-font = 5
label-muted-font = 2
label-muted = muted
label-muted-foreground = ${colors.red}

[module/wlan]
type = internal/network
interface = wlan0
interval = 5
format-connected = <label-connected>
format-connected-prefix = "直   "
format-connected-prefix-foreground = ${colors.blue}
format-disconnected = <label-disconnected>
format-disconnected-prefix = "睊   "
format-disconnected-prefix-foreground = ${colors.grey}
label-connected = %essid%
label-disconnected = Not connected
